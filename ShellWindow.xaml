<Window x:Class="PosPokemon.App.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS - Panel" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#161616" Padding="14">
            <StackPanel>
                <TextBlock Text="MENÚ" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding CurrentUser.Username}" Foreground="#BDBDBD" Margin="0,0,0,18"/>

                <Button Content="Ventas" Height="40" Margin="0,0,0,8"/>
                <Button Content="Inventario" Height="40" Margin="0,0,0,8"/>

                <!-- SOLO ADMIN -->
                <Button Content="Historial de ventas" Height="40" Margin="0,0,0,8"
                        Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>
                <Button Content="Gráficos / Reportes" Height="40" Margin="0,0,0,8"
                        Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>
                <Button Content="Usuarios" Height="40" Margin="0,0,0,8"
                        Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>
                <Button Content="Configuración" Height="40" Margin="0,0,0,8"
                        Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Column="1" Margin="16">
            <TextBlock Text="Bienvenido al POS" FontSize="22" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
