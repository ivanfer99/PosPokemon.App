<Application x:Class="PosPokemon.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:PosPokemon.App.Utils">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Estilos centralizados -->
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Typography.xaml"/>
                <ResourceDictionary Source="Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <utils:BoolToVisibilityConverter x:Key="BoolToVis"/>
            <utils:NullToVisibilityConverter x:Key="NullToVis"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>