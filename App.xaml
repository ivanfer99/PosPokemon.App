<Application x:Class="PosPokemon.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:PosPokemon.App.Utils"
             xmlns:converters="clr-namespace:PosPokemon.App.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Estilos centralizados -->
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Typography.xaml"/>
                <ResourceDictionary Source="Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters originales en Utils -->
            <utils:BoolToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Converters nuevos en Converters -->
            <converters:NullToVisibilityConverter x:Key="NullToVis"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>