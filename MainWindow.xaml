<Window x:Class="PosPokemon.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POS Pokémon / TCG" Height="650" Width="1000">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Padding="12" CornerRadius="12" BorderBrush="#333" BorderThickness="1">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBox Width="420" Margin="0,0,10,0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"
                             Height="34"/>
                    <Button Content="Buscar" Height="34" Width="120"
                            Command="{Binding SearchCommand}"/>
                    <Button Content="Crear demo" Height="34" Width="120" Margin="10,0,0,0"
                            Command="{Binding SeedExampleCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <DataGrid Grid.Row="1" Margin="0,14,0,0"
                  ItemsSource="{Binding State.SearchResults}"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="140"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="TCG" Binding="{Binding Tcg}" Width="90"/>
                <DataGridTextColumn Header="Set" Binding="{Binding SetName}" Width="160"/>
                <DataGridTextColumn Header="Rareza" Binding="{Binding Rarity}" Width="160"/>
                <DataGridTextColumn Header="Idioma" Binding="{Binding Language}" Width="80"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Price}" Width="90"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
