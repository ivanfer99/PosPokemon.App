<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Merge de recursos de colores y tipografía -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Typography.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ========================================
         ESTILOS DE CARDS
         ======================================== -->

    <Style x:Key="DashboardCard" TargetType="Border">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                Opacity="{StaticResource ShadowOpacity}" 
                                BlurRadius="20" 
                                ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                        Opacity="{StaticResource ShadowOpacityHover}" 
                                        BlurRadius="25" 
                                        ShadowDepth="4"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="CardTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CardTitleSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,15,0,0"/>
    </Style>

    <Style x:Key="CardSubtitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CardSubtitleSize}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <Style x:Key="CardIcon" TargetType="Viewbox">
        <Setter Property="Width" Value="{StaticResource CardIconSize}"/>
        <Setter Property="Height" Value="{StaticResource CardIconSize}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- ========================================
         ESTILOS DE BOTONES
         ======================================== -->

    <Style x:Key="BaseButton" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LogoutButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="Background" Value="{StaticResource LogoutButtonColor}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
        <Setter Property="Padding" Value="15,8"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource LogoutButtonHoverColor}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonColor}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
        <Setter Property="Padding" Value="15,10"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverColor}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========================================
         ESTILOS DE STATS CARDS
         ======================================== -->

    <Style x:Key="StatCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardWhiteBackground}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                Opacity="0.1" 
                                BlurRadius="10" 
                                ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="StatEmoji" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource StatEmojiSize}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="StatLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource StatLabelSize}"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <Style x:Key="StatValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource StatValueSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <Style x:Key="StatValueSuccess" TargetType="TextBlock" BasedOn="{StaticResource StatValue}">
        <Setter Property="Foreground" Value="{StaticResource SuccessTextColor}"/>
    </Style>

    <Style x:Key="StatValueDanger" TargetType="TextBlock" BasedOn="{StaticResource StatValue}">
        <Setter Property="Foreground" Value="{StaticResource DangerTextColor}"/>
    </Style>

    <!-- ========================================
         ESTILOS DE HEADER
         ======================================== -->

    <Style x:Key="MainHeader" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource HeaderBackgroundColor}"/>
        <Setter Property="Padding" Value="25,15"/>
    </Style>

    <Style x:Key="UserBadge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource UserBadgeBackgroundColor}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Margin" Value="0,0,15,0"/>
    </Style>

    <Style x:Key="UsernameText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteTextColor}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="RoleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXSmall}"/>
        <Setter Property="Foreground" Value="#95A5A6"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>