<Window x:Class="PosPokemon.App.Views.DiscountCampaignFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Campaña de Descuento" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource AppBackgroundColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                 x:Name="TxtTitle"
                 Text="➕ Nueva Campaña de Descuento"
                 FontSize="24" 
                 FontWeight="Bold"
                 Foreground="{StaticResource PrimaryTextColor}"
                 Margin="0,0,0,20"/>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="25">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource ShadowColor}" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Información Básica -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="📋 Información de la Campaña" 
                                 FontSize="16" 
                                 FontWeight="Bold"
                                 Foreground="{StaticResource PrimaryTextColor}"
                                 Margin="0,0,0,15"/>

                        <!-- Nombre -->
                        <TextBlock Text="Nombre de la Campaña *" 
                                 Foreground="{StaticResource SecondaryTextColor}"
                                 FontSize="12"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtName"
                               Height="40"
                               Padding="12,0"
                               FontSize="14"
                               Margin="0,0,0,15"/>

                        <!-- Porcentaje de Descuento -->
                        <TextBlock Text="Porcentaje de Descuento (%) *" 
                                 Foreground="{StaticResource SecondaryTextColor}"
                                 FontSize="12"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtDiscountPercentage"
                               Height="40"
                               Padding="12,0"
                               FontSize="14"
                               Margin="0,0,0,15"/>

                        <!-- Fechas -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Fecha de Inicio *" 
                                         Foreground="{StaticResource SecondaryTextColor}"
                                         FontSize="12"
                                         Margin="0,0,0,5"/>
                                <DatePicker x:Name="DateStart"
                                          Height="40"
                                          FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Fecha de Fin *" 
                                         Foreground="{StaticResource SecondaryTextColor}"
                                         FontSize="12"
                                         Margin="0,0,0,5"/>
                                <DatePicker x:Name="DateEnd"
                                          Height="40"
                                          FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Separator Grid.Row="1" Margin="0,15"/>

                    <!-- Selección de Productos -->
                    <StackPanel Grid.Row="2" Margin="0,15,0,0">
                        <TextBlock Text="📦 Productos en Descuento" 
                                 FontSize="16" 
                                 FontWeight="Bold"
                                 Foreground="{StaticResource PrimaryTextColor}"
                                 Margin="0,0,0,15"/>

                        <!-- Búsqueda -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TxtSearchProduct"
                                   Height="40"
                                   Padding="12,0"
                                   FontSize="14"
                                   VerticalContentAlignment="Center"/>

                            <Button Grid.Column="2"
                                  Content="🔍 Buscar"
                                  Height="40"
                                  Padding="20,0"
                                  Style="{StaticResource PrimaryButton}"
                                  Click="OnSearchProducts"/>
                        </Grid>
                    </StackPanel>

                    <!-- Lista de Productos -->
                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Productos Disponibles -->
                        <Border Grid.Column="0" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Background="#FAFAFA">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                         Text="Productos Disponibles"
                                         FontSize="13"
                                         FontWeight="SemiBold"
                                         Padding="12,10"
                                         Background="#F5F5F5"/>

                                <ListBox Grid.Row="1"
                                       x:Name="ListAvailableProducts"
                                       BorderThickness="0"
                                       SelectionMode="Extended"
                                       Padding="5"
                                       MouseDoubleClick="OnAddProduct">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding Name}" 
                                                         FontWeight="SemiBold"
                                                         FontSize="12"/>
                                                <TextBlock FontSize="11" Foreground="{StaticResource SecondaryTextColor}">
                                                    <Run Text="SKU:"/>
                                                    <Run Text="{Binding Sku}"/>
                                                    <Run Text=" | Precio: S/"/>
                                                    <Run Text="{Binding Price, StringFormat=N2}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Productos Seleccionados -->
                        <Border Grid.Column="2" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Background="#E8F5E9">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                         Text="Productos Seleccionados"
                                         FontSize="13"
                                         FontWeight="SemiBold"
                                         Padding="12,10"
                                         Background="#C8E6C9"/>

                                <ListBox Grid.Row="1"
                                       x:Name="ListSelectedProducts"
                                       BorderThickness="0"
                                       SelectionMode="Extended"
                                       Padding="5"
                                       MouseDoubleClick="OnRemoveProduct">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding Name}" 
                                                         FontWeight="SemiBold"
                                                         FontSize="12"/>
                                                <TextBlock FontSize="11" Foreground="#2E7D32">
                                                    <Run Text="SKU:"/>
                                                    <Run Text="{Binding Sku}"/>
                                                    <Run Text=" | Precio: S/"/>
                                                    <Run Text="{Binding Price, StringFormat=N2}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancelar"
                  Width="120"
                  Height="45"
                  Margin="0,0,10,0"
                  Background="#95A5A6"
                  Foreground="White"
                  BorderThickness="0"
                  Click="OnCancel">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                          CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="💾 Guardar Campaña"
                  Width="180"
                  Height="45"
                  Style="{StaticResource PrimaryButton}"
                  Click="OnSave"/>
        </StackPanel>
    </Grid>
</Window>
