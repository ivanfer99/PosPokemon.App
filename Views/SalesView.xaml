<UserControl x:Class="PosPokemon.App.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource AppBackgroundColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Botón Volver -->
        <Button Grid.Row="0"
                Content="⬅️ Volver al Dashboard"
                HorizontalAlignment="Left"
                Height="40"
                Padding="15,0"
                Margin="0,0,0,15"
                Style="{StaticResource PrimaryButton}"
                Command="{Binding BackToDashboardCommand}"/>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- SECCIÓN IZQUIERDA: Búsqueda y Productos -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource ShadowColor}" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <TextBlock Grid.Row="0"
                               Text="🎴 Buscar Producto"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryTextColor}"
                               Margin="0,0,0,20"/>

                    <!-- Búsqueda -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Height="45"
                                 Padding="15,0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="2">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="White"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <Grid>
                                                        <TextBlock Text="Buscar por SKU o nombre..."
                                                                   Foreground="#BDBDBD"
                                                                   VerticalAlignment="Center"
                                                                   Margin="15,0"
                                                                   IsHitTestVisible="False">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      Margin="15,0"
                                                                      VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Grid.Column="2"
                                Content="🔍 Buscar"
                                Height="45"
                                Padding="20,0"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding SearchProductsCommand}"/>
                    </Grid>

                    <!-- Lista de Productos Encontrados -->
                    <Border Grid.Row="2"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8">
                        <DataGrid ItemsSource="{Binding SearchResults}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  RowHeight="50"
                                  FontSize="13">

                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                </Style>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F8F9FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Código" Binding="{Binding Code}" Width="120"/>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Precio" Binding="{Binding Price, StringFormat='S/ {0:N2}'}" Width="100"/>
                                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="70"/>
                                <DataGridTemplateColumn Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="➕ Agregar"
                                                    Padding="8,4"
                                                    FontSize="11"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Border>

            <!-- SECCIÓN DERECHA: Carrito y Total -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="12"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource ShadowColor}" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>

                <Grid>
                    <!-- ✅ ACTUALIZADO: se agregó una fila extra al inicio -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ✅ SELECTOR DE CLIENTE - DISEÑO MEJORADO -->
                    <Border Grid.Row="0"
        Background="#F5F5F5"
        CornerRadius="8"
        Padding="12"
        Margin="0,0,0,15">

                        <StackPanel>
                            <TextBlock Text="👤 Cliente (Opcional)"
                   FontSize="12"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource PrimaryTextColor}"
                   Margin="0,0,0,8"/>

                            <!-- Campo de búsqueda -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- TextBox de búsqueda -->
                                <Border Grid.Column="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Background="White">
                                    <Grid>
                                        <TextBox x:Name="TxtCustomerSearch"
                             Height="36"
                             Padding="10,0"
                             FontSize="13"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             Text="{Binding CustomerSearchText, UpdateSourceTrigger=PropertyChanged}">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding SearchCustomersCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>

                                        <!-- Placeholder -->
                                        <TextBlock Text="🔍 Buscar cliente por nombre o DNI..."
                               Foreground="#BDBDBD"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="10,0"
                               IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=TxtCustomerSearch, Path=Text}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Popup de resultados -->
                                        <Popup IsOpen="{Binding IsCustomerSearchVisible}"
                           PlacementTarget="{Binding ElementName=TxtCustomerSearch}"
                           Placement="Bottom"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           PopupAnimation="Slide">
                                            <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="4"
                                MaxHeight="200"
                                MinWidth="300">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="10" ShadowDepth="2"/>
                                                </Border.Effect>
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <ItemsControl ItemsSource="{Binding CustomerSearchResults}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Background="Transparent"
                                                    Padding="12,8"
                                                    Cursor="Hand">
                                                                    <Border.InputBindings>
                                                                        <MouseBinding MouseAction="LeftClick"
                                                                  Command="{Binding DataContext.SelectCustomerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  CommandParameter="{Binding}"/>
                                                                    </Border.InputBindings>
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                    <StackPanel>
                                                                        <TextBlock Text="{Binding Name}" 
                                                               FontSize="13" 
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource PrimaryTextColor}"/>
                                                                        <TextBlock FontSize="11" Foreground="#757575" Margin="0,2,0,0">
                                                        <Run Text="{Binding DocumentType}"/>
                                                        <Run Text=":"/>
                                                        <Run Text="{Binding DocumentNumber}"/>
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>

                                <!-- Botón agregar cliente rápido -->
                                <Button Grid.Column="2"
                    Content="➕"
                    Width="36"
                    Height="36"
                    FontSize="16"
                    FontWeight="Bold"
                    ToolTip="Agregar nuevo cliente"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding QuickAddCustomerCommand}"/>
                            </Grid>

                            <!-- ✅ CARD DEL CLIENTE SELECCIONADO (MEJORADO) -->
                            <Border Margin="0,10,0,0"
                Padding="10"
                Background="#E8F5E9"
                CornerRadius="6"
                BorderBrush="#81C784"
                BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedCustomer}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <StackPanel>
                                        <TextBlock FontSize="11" 
                               FontWeight="SemiBold" 
                               Foreground="#2E7D32"
                               Margin="0,0,0,4">
                        <Run Text="✓ Cliente Seleccionado:"/>
                                        </TextBlock>

                                        <TextBlock FontSize="13" 
                               FontWeight="Bold"
                               Foreground="#1B5E20"
                               Text="{Binding SelectedCustomer.Name}"
                               Margin="0,0,0,2"/>

                                        <TextBlock FontSize="11" Foreground="#2E7D32">
                        <Run Text="{Binding SelectedCustomer.DocumentType}"/>
                        <Run Text=":"/>
                        <Run Text="{Binding SelectedCustomer.DocumentNumber}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Botón quitar -->
                                    <Button Content="✕"
                        Width="24"
                        Height="24"
                        FontSize="12"
                        FontWeight="Bold"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#E53935"
                        Foreground="White"
                        BorderThickness="0"
                        Command="{Binding ClearCustomerCommand}"
                        ToolTip="Quitar cliente">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                CornerRadius="12">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C62828"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Título del Carrito (MOVIDO a Row 1) -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="🛒 Carrito de Venta"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryTextColor}"/>
                        <TextBlock Text="{Binding CartItemCount, StringFormat='({0})'}"
                                   FontSize="16"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Items del Carrito (MOVIDO a Row 2) -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CartItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding ProductName}"
                                                       FontWeight="SemiBold"
                                                       FontSize="13"
                                                       Foreground="{StaticResource PrimaryTextColor}"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <Button Grid.Row="0" Grid.Column="1"
                                                    Content="🗑️"
                                                    FontSize="14"
                                                    Width="30"
                                                    Height="30"
                                                    Background="#E74C3C"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            CornerRadius="6">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#C0392B"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                        Orientation="Horizontal"
                                                        Margin="0,8,0,0">
                                                <Button Content="−"
                                                        Width="28" Height="28"
                                                        FontSize="16"
                                                        Background="#F5F5F5"
                                                        BorderThickness="1"
                                                        BorderBrush="#E0E0E0"
                                                        Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <TextBlock Text="{Binding Quantity}"
                                                           Width="40"
                                                           TextAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontWeight="SemiBold"
                                                           FontSize="13"
                                                           Margin="5,0"/>

                                                <Button Content="+"
                                                        Width="28" Height="28"
                                                        FontSize="16"
                                                        Background="#F5F5F5"
                                                        BorderThickness="1"
                                                        BorderBrush="#E0E0E0"
                                                        Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock FontSize="11" Foreground="{StaticResource SecondaryTextColor}">
                                                        <Run Text="S/ "/>
                                                        <Run Text="{Binding UnitPrice, Mode=OneWay, StringFormat='{}{0:N2}'}"/>
                                                        <Run Text=" c/u"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryTextColor}">
                                                        <Run Text="S/ "/>
                                                        <Run Text="{Binding LineTotal, Mode=OneWay, StringFormat='{}{0:N2}'}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Resumen de Totales (MOVIDO a Row 3) -->
                    <Border Grid.Row="3"
        Background="#F8F9FA"
        CornerRadius="8"
        Padding="15"
        Margin="0,15,0,15">

                        <StackPanel>
                            <!-- Subtotal -->
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Subtotal:"
                       Foreground="{StaticResource SecondaryTextColor}"
                       FontSize="13"/>
                                <TextBlock Text="{Binding Subtotal, StringFormat='S/ {0:N2}'}"
                       HorizontalAlignment="Right"
                       FontSize="13"
                       FontWeight="SemiBold"/>
                            </Grid>

                            <!-- ✅ BOTÓN COLAPSABLE DE DESCUENTO -->
                            <Button x:Name="BtnToggleDiscount"
                Content="➕ Aplicar Descuento"
                Height="38"
                FontSize="13"
                FontWeight="SemiBold"
                Margin="0,5,0,10"
                Cursor="Hand"
                Click="OnToggleDiscountPanel">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#9C27B0"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#7B1FA2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- ✅ PANEL COLAPSABLE DE DESCUENTO -->
                            <Border x:Name="DiscountPanel"
                Visibility="Collapsed"
                Background="#F3E5F5"
                BorderBrush="#9C27B0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,10">

                                <StackPanel>
                                    <TextBlock Text="💰 Descuento Manual"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#6A1B9A"
                           Margin="0,0,0,10"/>

                                    <!-- Tipo de Descuento -->
                                    <TextBlock Text="Tipo de Descuento:"
                           FontSize="11"
                           Foreground="{StaticResource SecondaryTextColor}"
                           Margin="0,0,0,5"/>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ✅ Botón Porcentaje (CORREGIDO) -->
                                        <RadioButton x:Name="RbPercentage"
                                 Grid.Column="0"
                                 Content="% Porcentaje"
                                 GroupName="DiscountType"
                                 IsChecked="False"
                                 Checked="OnDiscountTypeChanged"
                                 Height="36"
                                 FontSize="12"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Stretch"
                                 HorizontalContentAlignment="Center"
                                 Cursor="Hand">
                                            <RadioButton.Template>
                                                <ControlTemplate TargetType="RadioButton">
                                                    <Border x:Name="border"
                                        BorderThickness="2"
                                        CornerRadius="6"
                                        Padding="8"
                                        Background="#E1BEE7"
                                        BorderBrush="#9C27B0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#9C27B0"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#CE93D8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </RadioButton.Template>
                                            <RadioButton.Style>
                                                <Style TargetType="RadioButton">
                                                    <Setter Property="Foreground" Value="#6A1B9A"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </RadioButton.Style>
                                        </RadioButton>

                                        <!-- ✅ Botón Monto Fijo (CORREGIDO) -->
                                        <RadioButton x:Name="RbFixedAmount"
                                 Grid.Column="2"
                                 Content="S/ Monto Fijo"
                                 GroupName="DiscountType"
                                 IsChecked="True"
                                 Checked="OnDiscountTypeChanged"
                                 Height="36"
                                 FontSize="12"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Stretch"
                                 HorizontalContentAlignment="Center"
                                 Cursor="Hand">
                                            <RadioButton.Template>
                                                <ControlTemplate TargetType="RadioButton">
                                                    <Border x:Name="border"
                                        BorderThickness="2"
                                        CornerRadius="6"
                                        Padding="8"
                                        Background="#E1BEE7"
                                        BorderBrush="#9C27B0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#9C27B0"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#CE93D8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </RadioButton.Template>
                                            <RadioButton.Style>
                                                <Style TargetType="RadioButton">
                                                    <Setter Property="Foreground" Value="#6A1B9A"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </RadioButton.Style>
                                        </RadioButton>
                                    </Grid>

                                    <!-- Valor del Descuento -->
                                    <TextBlock Text="Valor del Descuento:"
                           FontSize="11"
                           Foreground="{StaticResource SecondaryTextColor}"
                           Margin="0,0,0,5"/>
                                    <TextBox Height="38"
                         Padding="12,0"
                         FontSize="14"
                         FontWeight="SemiBold"
                         Text="{Binding DiscountValue, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10"/>

                                    <!-- Motivo del Descuento -->
                                    <TextBlock Text="Motivo (Opcional):"
                           FontSize="11"
                           Foreground="{StaticResource SecondaryTextColor}"
                           Margin="0,0,0,5"/>
                                    <TextBox Height="32"
                         Padding="10,0"
                         FontSize="12"
                         Text="{Binding DiscountNote, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,12"/>

                                    <!-- Botones de Acción -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                            Content="✓ Aplicar"
                            Height="36"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Command="{Binding ApplyDiscountCommand}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#388E3C"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Grid.Column="2"
                            Content="✕ Limpiar"
                            Height="36"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Command="{Binding ClearDiscountCommand}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#757575"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#616161"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Descuento Aplicado -->
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Descuento:"
                       Foreground="{StaticResource SecondaryTextColor}"
                       FontSize="13"/>
                                <TextBlock Text="{Binding Discount, StringFormat='S/ {0:N2}'}"
                       HorizontalAlignment="Right"
                       FontSize="13"
                       Foreground="{StaticResource DangerTextColor}"
                       FontWeight="SemiBold"/>
                            </Grid>

                            <Separator Margin="0,8"/>

                            <!-- Total -->
                            <Grid Margin="0,10,0,0">
                                <TextBlock Text="TOTAL:"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryTextColor}"/>
                                <TextBlock Text="{Binding Total, StringFormat='S/ {0:N2}'}"
                       HorizontalAlignment="Right"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{StaticResource SuccessTextColor}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Botones de Acción (MOVIDO a Row 4) -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Botón Principal: Procesar Venta -->
                        <Button Grid.Column="0"
            Content="💰Procesar Venta"
            Height="55"
            FontSize="14"
            FontWeight="Bold"
            Cursor="Hand"
            Command="{Binding ProcessSaleCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#1976D2" />
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#BDBDBD"/>
                                            <Setter Property="Foreground" Value="#757575"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Botón Secundario: Limpiar Carrito -->
                        <Button Grid.Column="2"
            Content="🗑️Limpiar Carrito"
            Height="55"
            FontSize="14"
            FontWeight="SemiBold"
            Cursor="Hand"
            Command="{Binding ClearCartCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#E74C3C"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C0392B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
