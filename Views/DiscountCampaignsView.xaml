<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PosPokemon.App.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="PosPokemon.App.Views.DiscountCampaignsView"
             Background="{StaticResource AppBackgroundColor}" d:DesignHeight="463.232" d:DesignWidth="1227.823">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="💰 Campañas de Descuento" 
                         FontSize="28" 
                         FontWeight="Bold"
                         Foreground="{StaticResource PrimaryTextColor}"/>
                <TextBlock Text="Gestiona descuentos programados para tus productos" 
                         FontSize="14" 
                         Foreground="{StaticResource SecondaryTextColor}"
                         Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="➕ Nueva Campaña"
                      Width="160"
                      Height="45"
                      Margin="0,0,10,0"
                      Style="{StaticResource PrimaryButton}"
                      Command="{Binding CreateCampaignCommand}"/>

                <Button Content="🔙 Volver"
                      Width="120"
                      Height="45"
                      Background="#95A5A6"
                      Foreground="White"
                      BorderThickness="0"
                      Command="{Binding BackToDashboardCommand}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}"
                                              CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Campaigns List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Campaigns}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                              CornerRadius="12" 
                              Padding="20"
                              Margin="0,0,0,15">
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource ShadowColor}" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Información de la Campaña -->
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="{Binding Name}" 
                                                 FontSize="18" 
                                                 FontWeight="Bold"
                                                 Foreground="{StaticResource PrimaryTextColor}"
                                                 VerticalAlignment="Center"/>

                                        <!-- Badge de Estado -->
                                        <Border Margin="10,0,0,0" 
                                              CornerRadius="12"
                                              Padding="8,4"
                                              VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="{x:Type Border}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="1">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="0">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="{x:Type TextBlock}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="1">
                                                                <Setter Property="Text" Value="✅ ACTIVA"/>
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="0">
                                                                <Setter Property="Text" Value="❌ INACTIVA"/>
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>

                                    <!-- Detalles -->
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Descuento -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                 Text="💸 Descuento:" 
                                                 Foreground="{StaticResource SecondaryTextColor}"
                                                 FontSize="13"
                                                 Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"><Run Text="{Binding DiscountPercentage, StringFormat=N1}" FontWeight="Bold"/><Run Text=" "/><Run Text="%" FontWeight="Bold"/></TextBlock>

                                        <!-- Periodo -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                                 Text="📅 Periodo:" 
                                                 Foreground="{StaticResource SecondaryTextColor}"
                                                 FontSize="13"
                                                 Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="13"><Run Text="{Binding StartDate, StringFormat=dd/MM/yyyy}"/><Run Text=" "/><Run Text=" → "/><Run Text=" "/><Run Text="{Binding EndDate, StringFormat=dd/MM/yyyy}"/></TextBlock>

                                        <!-- Productos -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                                 Text="📦 Productos:" 
                                                 Foreground="{StaticResource SecondaryTextColor}"
                                                 FontSize="13"
                                                 Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" FontSize="13" FontWeight="SemiBold"><Run Text="{Binding ProductCount}"/><Run Text=" "/><Run Text=" producto(s)"/></TextBlock>
                                    </Grid>

                                    <!-- Creador -->
                                    <TextBlock Foreground="{StaticResource SecondaryTextColor}" FontSize="11"><Run Text="Creado por:"/><Run Text=" "/><Run Text="{Binding CreatorUsername}" FontWeight="SemiBold"/></TextBlock>
                                </StackPanel>

                                <!-- Acciones -->
                                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" Margin="20,0,0,0">
                                    <Button Content="👁️ Ver"
                                          Width="110"
                                          Height="35"
                                          Margin="0,0,0,5"
                                          Background="#2196F3"
                                          Foreground="White"
                                          BorderThickness="0"
                                          Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                          CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border Background="{TemplateBinding Background}"
                                                                  CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1976D2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="✏️ Editar"
                                          Width="110"
                                          Height="35"
                                          Margin="0,0,0,5"
                                          Background="#FF9800"
                                          Foreground="White"
                                          BorderThickness="0"
                                          Command="{Binding DataContext.EditCampaignCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                          CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border Background="{TemplateBinding Background}"
                                                                  CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F57C00"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Width="110"
                                          Height="35"
                                          Margin="0,0,0,5"
                                          Foreground="White"
                                          BorderThickness="0"
                                          Command="{Binding DataContext.ToggleActiveCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                          CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border Background="{TemplateBinding Background}"
                                                                  CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="1">
                                                        <Setter Property="Content" Value="⏸️ Pausar"/>
                                                        <Setter Property="Background" Value="#FFC107"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="0">
                                                        <Setter Property="Content" Value="▶️ Activar"/>
                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.8"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="🗑️ Eliminar"
                                          Width="110"
                                          Height="35"
                                          Background="#F44336"
                                          Foreground="White"
                                          BorderThickness="0"
                                          Command="{Binding DataContext.DeleteCampaignCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                          CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border Background="{TemplateBinding Background}"
                                                                  CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#D32F2F"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>